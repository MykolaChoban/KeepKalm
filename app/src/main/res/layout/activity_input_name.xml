<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:text="@string/welcome_text"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/edit_person_name"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/what_is_your_full_name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        />

    <Button
        android:id="@+id/validate_person_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10sp"
        android:onClick="validateName"
        android:text="@string/validateNameButtonText"
        android:textSize="18sp" />

</LinearLayout>
